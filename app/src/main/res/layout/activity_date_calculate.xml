<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DateCalculate">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:textSize="25sp"
        android:text="@string/tt"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/birthday"
            android:background="@drawable/background"
            android:padding="12dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/dd"
            android:autofillHints="@string/dd"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />



        <EditText
            android:id="@+id/birthyear"
            android:background="@drawable/background"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/yy"
            android:autofillHints="@string/yy"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <Spinner
        android:background="@drawable/background"
        android:id="@+id/birthmonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:textAlignment="center"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/sho"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/background"
        android:onClick="Calculate"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingLeft="39dp"
        android:paddingRight="39dp"
        android:text="@string/findd"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:padding="7dp"
        android:textColor="#000"
        android:visibility="invisible"
        android:textAlignment="center" />


</LinearLayout>